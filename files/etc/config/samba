
config samba
	option name 'Flystation'
	option workgroup 'WORKGROUP'
	option description 'Flystation'
	option homes '0'
	option autoshare '0'

config sambashare
	option auto '1'
	option read_only 'no'
	option guest_ok 'yes'
	option create_mask '0666'
	option dir_mask '0777'
	option device 'sda2'
	option browseable 'yes'
	option users 'root'
	option name 'sda1'
	option path '/mnt/sda1'

config sambashare
